{
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "spread" : true,
            "restParams" : true
        },
    },
    "env" : {
        "browser" : true,
        "node" : true,
        "es6" : true
    },
    "extends": [
        "airbnb", 
        "prettier",
        "prettier/react",
    ],
    "plugins": ["react", "prettier"],
    "rules": {
        "react/jsx-filename-extension": ["warn", {
            "extensions": [".js", ".jsx"]
            }],
        "prettier/prettier": "error",
        "no-unused-vars": "warn",
        "no-console": "warn",
        "func-names": "off",
        "no-process-exit": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off"
    }
  }